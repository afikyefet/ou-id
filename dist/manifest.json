{
    "manifest_version": 3,
    "name": "Element Snapper",
    "version": "0.1.0",
    "description": "Capture values from page elements and paste variables into forms using profiles.",
    "action": {
        "default_title": "Element Snapper",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "alarms",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "service_worker.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "url-utils.js",
                "selector-utils.js",
                "content.js",
                "page-overlay.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "page-overlay.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}